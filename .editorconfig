# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Dart files
[*.dart]
indent_size = 2
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# XML files (Android/iOS config)
[*.xml]
indent_size = 4

# Gradle files
[*.gradle]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Properties files
[*.properties]
indent_size = 2

# Git config
[.gitignore]
indent_size = 2

# Swift files (iOS)
[*.swift]
indent_size = 4

# Kotlin files (Android)
[*.kt]
indent_size = 4
